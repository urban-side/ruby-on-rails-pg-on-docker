<%= render 'navbar' %>

<div class="container table-responsive">
  <table class="table">
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th colspan="1"></th>
    </thead>
    
    <tbody>
      <% @labels.each do |label| %>
        <tr>
          <td><%= label.id %></td>
          <td><%= label.name %></td>
          <td><%= link_to 'Edit', edit_label_path(label), class: 'btn btn-info btn-sm btn-block' %></td>
          <td><%= link_to 'Destroy', label_path(label), class: 'btn btn-outline-danger btn-sm btn-block', method: :delete,
              data: { confirm: "このタスクを削除します。よろしいですか？" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="my-3">
    <%= link_to "<< Home", root_path, class: 'btn btn-link' %>
  </div>
</div>